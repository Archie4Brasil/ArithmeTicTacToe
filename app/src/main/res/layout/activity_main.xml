<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <!-- Archie last update: 10:58
        This is the layout for portrait mode of play -->

    <!-- Top Layout of app, contains: instructions box -->
    <LinearLayout
        android:id="@+id/TopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/textView"
            style="@style/TextFormat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Please Select Position!" />

    </LinearLayout>

    <!-- Middle layout of app, contains: grid buttons -->
    <LinearLayout
        android:id="@+id/middleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/gridRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/grid1x1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:onClick="gridClick" />

            <ImageButton
                android:id="@+id/grid1x2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:onClick="gridClick" />

            <ImageButton
                android:id="@+id/grid1x3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:onClick="gridClick" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/gridRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/grid2x1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:onClick="gridClick" />

            <ImageButton
                android:id="@+id/grid2x2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:onClick="gridClick" />

            <ImageButton
                android:id="@+id/grid2x3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:onClick="gridClick" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/gridRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/grid3x1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:onClick="gridClick" />

            <ImageButton
                android:id="@+id/grid3x2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:onClick="gridClick" />

            <ImageButton
                android:id="@+id/grid3x3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:onClick="gridClick" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom layout of app, contains: answers buttons -->
    <LinearLayout
        android:id="@+id/bottonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/answers1"
            style="@style/Answerbuttons"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:onClick="ansClick"
            android:text="Answer 1" />

        <Button
            android:id="@+id/answers2"
            style="@style/Answerbuttons"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:onClick="ansClick"
            android:text="Answer 2" />

        <Button
            android:id="@+id/answers3"
            style="@style/Answerbuttons"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:onClick="ansClick"
            android:text="Answer 3" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/resetbuttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reSetButton"
            android:layout_width="150dp"
            android:layout_height="63dp"
            android:onClick="resetGame"
            android:text="New Game" />

        <Button
            android:id="@+id/endGameButton"
            android:layout_width="wrap_content"
            android:layout_height="65dp"

            android:layout_weight="0.08"
            android:text="End Game" />
    </LinearLayout>

</LinearLayout>
